<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#D9FFDB58">

    <TextView
         android:layout_height="250dp"
         android:layout_width="250dp"
         android:background="@drawable/bg_blackboard"
         app:layout_constraintHorizontal_bias="0.496"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginTop="100dp"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
         android:id="@+id/Border" />

    <LinearLayout
         android:layout_height="100dp"
         android:layout_width="250dp"
         app:layout_constraintHorizontal_bias="0.496"
         android:orientation="horizontal"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginTop="60dp"
         app:layout_constraintTop_toBottomOf="@+id/Border"
         android:id="@+id/linearLayout">

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="100dp"
             android:layout_width="100dp"
             android:textSize="40sp"
             android:layout_marginLeft="20dp"
             android:textColor="#FFFFFF"
             android:background="@drawable/btn_short_condition"
             android:shadowRadius="4"
             android:layout_marginRight="10dp"
             android:shadowColor="#000000"
             android:shadowDx="2"
             android:shadowDy="2"
             android:id="@+id/btn_choice1"
             android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="100dp"
             android:layout_width="100dp"
             android:background="@drawable/btn_short_condition"
             android:shadowRadius="4"
             android:textSize="40sp"
             android:layout_marginRight="20dp"
             android:shadowColor="#000000"
             android:textColor="#FFFFFF"
             android:shadowDx="2"
             android:shadowDy="2"
             android:id="@+id/btn_choice2"
             android:text="15" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="100dp"
         android:layout_width="250dp"
         app:layout_constraintHorizontal_bias="0.496"
         android:orientation="horizontal"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginTop="10dp"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout"
         android:id="@+id/linearLayout3">

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="100dp"
             android:layout_width="100dp"
             android:textSize="40sp"
             android:layout_marginLeft="20dp"
             android:textColor="#FFFFFF"
             android:background="@drawable/btn_short_condition"
             android:shadowRadius="4"
             android:layout_marginRight="10dp"
             android:shadowColor="#000000"
             android:shadowDx="2"
             android:shadowDy="2"
             android:id="@+id/btn_choice3"
             android:text="777" />

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="100dp"
             android:layout_width="100dp"
             android:background="@drawable/btn_short_condition"
             android:shadowRadius="4"
             android:textSize="40sp"
             android:layout_marginRight="20dp"
             android:shadowColor="#000000"
             android:textColor="#FFFFFF"
             android:shadowDx="2"
             android:shadowDy="2"
             android:id="@+id/btn_choice4"
             android:text="50" />

    </LinearLayout>

   <LinearLayout
    android:layout_width="455dp"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/linearLayout2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="30dp">

        <ImageButton
            android:id="@+id/imgBtn_home"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_box"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/ic_home" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_operation"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:shadowRadius="2"
        android:fontFamily="@font/paytone_one"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="3"
        android:text="Subtraction" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginEnd="30dp">

        <ImageButton
            android:id="@+id/imgBtn_pause"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_box"
            android:layout_marginRight="25dp"
            app:srcCompat="@drawable/ic_pause" />
    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="120dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/heartWithTimer">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="36dp">

        <FrameLayout
            android:id="@+id/heart_choice"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_boxsmall"
                android:gravity="center|start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp">

                    <ImageView
                        android:id="@+id/icon_heart"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_heart"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/heart_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="23sp"
                             android:paddingTop="2dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="4dp"
                        android:shadowRadius="4"
                        android:fontFamily="@font/paytone_one"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_question_progress"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:text="4/10"
        android:textSize="23sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:shadowRadius="2"
        android:fontFamily="@font/paytone_one"
            android:paddingBottom="12dp"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginEnd="36dp">

        <FrameLayout
            android:id="@+id/timer_choice"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_boxsmall"
                android:gravity="center|start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:id="@+id/icon_timer"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_clock"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/timer_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="2dp"
                            android:paddingTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:shadowRadius="4"
                        android:fontFamily="@font/paytone_one"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>

    <LinearLayout
         android:layout_height="180dp"
         android:layout_width="150dp"
         app:layout_constraintHorizontal_bias="0.50"
         app:layout_constraintTop_toTopOf="@+id/Border"
         android:orientation="vertical"
         app:layout_constraintStart_toStartOf="@+id/Border"
         app:layout_constraintEnd_toEndOf="@+id/Border"
         app:layout_constraintBottom_toBottomOf="@+id/Border"
         app:layout_constraintVertical_bias="0.660">

        <TextView
             android:layout_height="43dp"
             android:layout_width="match_parent"
             android:gravity="right"
             android:paddingRight="5dp"
             android:fontFamily="@font/shantell_sans_bold"
             android:textSize="33sp"
             android:textColor="#FFFFFF"
             android:id="@+id/text_givenone"
             android:text="55" />

        <LinearLayout
             android:layout_height="46dp"
             android:layout_width="match_parent"
             android:orientation="horizontal">

            <TextView
                 android:layout_height="36dp"
                 android:layout_width="10dp"
                 android:gravity="right"
                 android:fontFamily="@font/shantell_sans_bold"
                 android:textSize="33dp"
                 android:textColor="#FFFFFF"
                 android:layout_weight="1"
                 android:id="@+id/text_operator"
                 android:text="+" />

            <TextView
                 android:layout_height="40dp"
                 android:layout_width="60dp"
                 android:gravity="right"
                 android:paddingRight="5dp"
                 android:fontFamily="@font/shantell_sans_bold"
                 android:textSize="33sp"
                 android:textColor="#FFFFFF"
                 android:layout_weight="1"
                 android:id="@+id/text_giventwo"
                 android:text="999" />

        </LinearLayout>

        <View
             android:layout_height="5dp"
             android:layout_width="wrap_content"
             android:background="#FFFFFF"
             android:layout_marginLeft="25dp" />

        <TextView
             android:layout_height="32dp"
             android:layout_width="match_parent"
             android:fontFamily="@font/shantell_sans_bold"
             android:textSize="28sp"
             android:textColor="#FFFFFF"
             android:paddingLeft="10dp"
             android:id="@+id/equal"
             android:text="=" />

    </LinearLayout>

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:visibility="invisible"
         app:layout_constraintHorizontal_bias="0.498"
         android:textSize="17sp"
         android:textColor="@color/white"
         android:layout_marginTop="20dp"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
         android:shadowRadius="2"
         app:layout_constraintStart_toStartOf="parent"
         android:fontFamily="@font/paytone_one"
         android:shadowColor="#000000"
         app:layout_constraintEnd_toEndOf="parent"
         android:shadowDx="4"
         android:shadowDy="3"
         android:id="@+id/text_feedback"
         android:text="" />

</androidx.constraintlayout.widget.ConstraintLayout>