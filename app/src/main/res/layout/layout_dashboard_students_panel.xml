        android:layout_width="0dp"
        android:gravity="center"
        android:fontFamily="@font/paytone_one"
        android:textSize="15sp"
        android:textColor="#204520"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:text="Score"
        android:textStyle="bold" />
</TableRow>



