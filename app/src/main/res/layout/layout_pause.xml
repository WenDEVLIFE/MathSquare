<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="top|center"
         android:orientation="vertical">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:textSize="30sp"
             android:textColor="@color/white"
             android:layout_marginTop="100dp"
             android:layout_marginBottom="10dp"
             android:gravity="center_horizontal"
             android:layout_marginHorizontal="30dp"
             android:shadowRadius="4"
             android:fontFamily="@font/paytone_one"
             android:shadowColor="#000000"
             android:shadowDx="2"
             android:shadowDy="2"
             android:text="Paused - Press Resume to continue" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:textSize="24sp"
             android:textColor="@color/white"
             android:layout_marginBottom="100dp"
             android:gravity="center_horizontal"
             android:layout_marginHorizontal="28dp"
             android:shadowRadius="4"
             android:fontFamily="@font/paytone_one"
             android:shadowColor="#000000"
             android:shadowDx="2"
             android:shadowDy="2"
             android:id="@+id/current_questions"
             android:text="Questions left: --/--" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:gravity="center"
         android:orientation="vertical"
         android:layout_marginTop="230dp">

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="26dp"
             android:background="@drawable/btn_playgame"
             android:layout_marginHorizontal="75dp"
             android:fontFamily="@font/paytone_one"
             android:textSize="27sp"
             android:textAllCaps="true"
             android:drawableStart="@drawable/ic_playbtn"
             android:textColor="@color/white"
             android:id="@+id/btn_playgame"
             android:text="Resume" />

        <LinearLayout
             android:layout_height="60dp"
             android:layout_width="match_parent"
             android:layout_marginBottom="26dp"
             android:background="@drawable/btn_ic_retrydefault"
             android:gravity="left|center"
             android:elevation="3dp"
             android:layout_marginHorizontal="75sp"
             android:orientation="horizontal"
             android:id="@+id/btn_Repeat">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="62dp"
                 android:background="@drawable/btn_ic_repeatbackground"
                 android:gravity="center"
                 android:orientation="horizontal">

                <ImageView
                     android:layout_height="60dp"
                     android:layout_width="60dp"
                     android:padding="10dp"
                     app:srcCompat="@drawable/ic_retry" />

            </LinearLayout>

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:fontFamily="@font/paytone_one"
                 android:textSize="27sp"
                 android:textAllCaps="true"
                 android:textColor="@color/white"
                 android:layout_marginLeft="8dp"
                 android:text="Repeat" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="26dp"
             android:background="@drawable/btn_exitgame"
             android:layout_marginHorizontal="75sp"
             android:fontFamily="@font/paytone_one"
             android:textSize="27sp"
             android:textAllCaps="true"
             android:drawableStart="@drawable/ic_exitgame"
             android:textColor="@color/white"
             android:id="@+id/btn_exitgame"
             android:text="@string/exit_game" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>