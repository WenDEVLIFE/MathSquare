<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:id="@+id/main">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="16dp"
         android:orientation="vertical"
         android:layout_marginTop="30dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:textSize="28sp"
             android:textColor="@color/white"
             android:layout_marginBottom="100dp"
             android:gravity="center_horizontal"
             android:layout_marginHorizontal="28dp"
             android:shadowRadius="4"
             android:fontFamily="@font/paytone_one"
             android:shadowColor="#000000"
             android:shadowDx="2"
             android:shadowDy="2"
             android:id="@+id/question_opening"
             android:text="Enter your Student information" />

        <com.google.android.material.textfield.TextInputLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginEnd="16dp"
             android:hint="First Name"
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_marginStart="16dp"
             android:id="@+id/first_name_layout">

            <com.google.android.material.textfield.TextInputEditText
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:hint="First Name"
                 android:textColorHint="@color/white"
                 android:fontFamily="@font/paytone_one"
                 android:backgroundTint="@color/white"
                 android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginEnd="16dp"
             android:hint="Last Name"
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_marginTop="16dp"
             android:layout_marginStart="16dp"
             android:id="@+id/last_name_layout">

            <com.google.android.material.textfield.TextInputEditText
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:hint="Last Name"
                 android:textColorHint="@color/white"
                 android:fontFamily="@font/paytone_one"
                 android:backgroundTint="@color/white"
                 android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginEnd="16dp"
             android:orientation="horizontal"
             android:paddingTop="16dp">

            <com.google.android.material.textfield.TextInputLayout
                 android:layout_height="65dp"
                 android:layout_width="match_parent"
                 android:hint="Section"
                 android:paddingStart="16dp"
                 style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <AutoCompleteTextView
                     android:layout_height="60dp"
                     android:layout_width="match_parent"
                     android:hint="Section"
                     android:textColorHint="@color/white"
                     android:fontFamily="@font/paytone_one"
                     android:backgroundTint="@color/white"
                     android:textColor="@color/white"
                     android:paddingStart="16dp"
                     android:inputType="none"
                     android:id="@+id/SectionChooser" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginEnd="16dp"
             android:orientation="horizontal"
             android:paddingStart="16dp">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical">

                <Spinner
                     android:layout_height="60dp"
                     android:layout_width="wrap_content"
                     android:spinnerMode="dropdown"
                     android:paddingTop="5dp"
                     android:id="@+id/numberDropdownPicker">

                </Spinner>

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:visibility="gone"
                     android:textColor="#FF0000"
                     android:id="@+id/spinnerError" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="180dp"
             android:layout_width="match_parent"
             android:layout_marginEnd="16dp"
             android:gravity="center|top"
             android:orientation="vertical"
             android:paddingTop="40dp">

            <androidx.appcompat.widget.AppCompatButton
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginEnd="16dp"
                 android:background="@drawable/box_create"
                 android:elevation="8dp"
                 android:fontFamily="@font/paytone_one"
                 android:textSize="20sp"
                 android:textColor="@color/white"
                 android:layout_marginStart="16dp"
                 android:id="@+id/btn_submit"
                 android:text="Submit" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>