<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/yellowbg"
    android:id="@+id/main">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/number_container">

    </FrameLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="28dp"
        android:shadowRadius="4"
        android:fontFamily="@font/paytone_one"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:id="@+id/question_opening"
        android:text="Select an account to add" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/question_opening"
        android:orientation="vertical"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="26dp"
            android:background="@drawable/btn_default"
            android:gravity="left|center"
            android:elevation="3dp"
            android:layout_marginHorizontal="75sp"
            android:orientation="horizontal"
            android:id="@+id/btn_playgame_as_student">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="62dp"
                android:background="@drawable/btn_ic_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_student" />

            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="@font/paytone_one"
                android:textSize="27sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:text="Admin" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="26dp"
            android:background="@drawable/btn_default"
            android:gravity="left|center"
            android:elevation="3dp"
            android:layout_marginHorizontal="75sp"
            android:orientation="horizontal"
            android:id="@+id/btn_signinteacher">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="62dp"
                android:background="@drawable/btn_ic_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_teacher" />

            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="@font/paytone_one"
                android:textSize="27sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:text="Teacher" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>