<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#D9FFDB58">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="top|center"
         android:orientation="vertical">

        <LinearLayout
             android:layout_height="70dp"
             android:layout_width="match_parent"
             android:gravity="center"
             android:background="@drawable/btn_long_condition_off"
             android:orientation="horizontal"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:layout_marginTop="30dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="4dp"
                 android:gravity="center_horizontal"
                 android:shadowRadius="4"
                 android:textSize="20sp"
                 android:fontFamily="@font/paytone_one"
                 android:textColor="@color/white"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="On Timer" />

            <ImageView
                 android:layout_height="20dp"
                 android:layout_width="20dp"
                 android:src="@drawable/btn_operation_add"
                 android:id="@+id/difficultyImage"
                 android:layout_gravity="center" />

        </LinearLayout>

        <GridLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginBottom="30dp"
             android:useDefaultMargins="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="10dp"
             android:columnCount="2"
             android:rowCount="2">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical">

                <ImageView
                     android:layout_height="30dp"
                     android:layout_width="match_parent"
                     android:src="@drawable/ic_star_one"
                     android:padding="16dp"
                     android:translationY="60dp"
                     android:layout_gravity="center" />

                <FrameLayout
                     android:layout_height="80dp"
                     android:layout_width="80dp"
                     android:gravity="center"
                     android:id="@+id/ontimer_one">

                    <LinearLayout
                         android:layout_height="match_parent"
                         android:layout_width="match_parent"
                         android:gravity="center"
                         android:background="@drawable/btn_short_condition"
                         android:orientation="vertical">

                        <ImageView
                             android:layout_height="60dp"
                             android:layout_width="60dp"
                             android:src="@drawable/ic_timer_level"
                             android:padding="4dp" />

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                     android:layout_height="100dp"
                     android:layout_width="100dp"
                     android:layout_marginBottom="6dp"
                     android:gravity="center"
                     android:background="@drawable/box_background_dark"
                     android:orientation="vertical"
                     android:layout_marginTop="4dp">

                    <ImageView
                         android:layout_height="50dp"
                         android:layout_width="50dp"
                         android:src="@drawable/ic_trophy_off"
                         android:layout_gravity="center" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:gravity="center_horizontal"
                         android:layout_marginHorizontal="28dp"
                         android:shadowRadius="4"
                         android:textSize="10sp"
                         android:fontFamily="@font/paytone_one"
                         android:textColor="@color/white"
                         android:shadowColor="#000000"
                         android:shadowDx="2"
                         android:shadowDy="2"
                         android:text="0/0 (0%)" />

                </LinearLayout>

                <ImageView
                     android:layout_height="30dp"
                     android:layout_width="match_parent"
                     android:src="@drawable/ic_star_one"
                     android:translationY="-200dp"
                     android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical">

                <ImageView
                     android:layout_height="30dp"
                     android:layout_width="match_parent"
                     android:src="@drawable/ic_star_one"
                     android:translationY="60dp"
                    android:padding="60dp"
                     android:layout_gravity="center" />

                <FrameLayout
                     android:layout_height="80dp"
                     android:layout_width="80dp"
                     android:gravity="center"
                     android:id="@+id/ontimer_two">

                    <LinearLayout
                         android:layout_height="match_parent"
                         android:layout_width="match_parent"
                         android:gravity="center"
                         android:background="@drawable/btn_short_condition"
                         android:orientation="vertical">

                        <ImageView
                             android:layout_height="60dp"
                             android:layout_width="60dp"
                             android:src="@drawable/ic_timer_level"
                             android:padding="4dp" />

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                     android:layout_height="100dp"
                     android:layout_width="100dp"
                     android:layout_marginBottom="6dp"
                     android:gravity="center"
                     android:background="@drawable/box_background_dark"
                     android:orientation="vertical"
                     android:layout_marginTop="4dp">

                    <ImageView
                         android:layout_height="50dp"
                         android:layout_width="50dp"
                         android:src="@drawable/ic_trophy_off"
                         android:layout_gravity="center" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:gravity="center_horizontal"
                         android:layout_marginHorizontal="28dp"
                         android:shadowRadius="4"
                         android:textSize="10sp"
                         android:fontFamily="@font/paytone_one"
                         android:textColor="@color/white"
                         android:shadowColor="#000000"
                         android:shadowDx="2"
                         android:shadowDy="2"
                         android:text="0/0 (0%)" />

                </LinearLayout>

                <ImageView
                     android:layout_height="30dp"
                     android:layout_width="match_parent"
                     android:src="@drawable/ic_star_two"
                     android:translationY="-200dp"
                     android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:translationY="-40dp"
                 android:layout_marginStart="110dp">

                <ImageView
                     android:layout_height="30dp"
                     android:layout_width="match_parent"
                    android:padding="60dp"
                     android:src="@drawable/ic_star_one"
                     android:translationY="60dp"
                     android:layout_gravity="center" />

                <FrameLayout
                     android:layout_height="80dp"
                     android:layout_width="80dp"
                     android:gravity="center"
                     android:id="@+id/ontimer_three">

                    <LinearLayout
                         android:layout_height="match_parent"
                         android:layout_width="match_parent"
                         android:gravity="center"
                         android:background="@drawable/btn_short_condition"
                         android:orientation="vertical">

                        <ImageView
                             android:layout_height="60dp"
                             android:layout_width="60dp"
                             android:src="@drawable/ic_timer_level"
                             android:padding="4dp" />

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                     android:layout_height="100dp"
                     android:layout_width="100dp"
                     android:layout_marginBottom="6dp"
                     android:gravity="center"
                     android:background="@drawable/box_background_dark"
                     android:orientation="vertical"
                     android:layout_marginTop="4dp">

                    <ImageView
                         android:layout_height="50dp"
                         android:layout_width="50dp"
                         android:src="@drawable/ic_trophy_off"
                         android:layout_gravity="center" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:gravity="center_horizontal"
                         android:layout_marginHorizontal="28dp"
                         android:shadowRadius="4"
                         android:textSize="10sp"
                         android:fontFamily="@font/paytone_one"
                         android:textColor="@color/white"
                         android:shadowColor="#000000"
                         android:shadowDx="2"
                         android:shadowDy="2"
                         android:text="0/0 (0%)" />

                </LinearLayout>

                <ImageView
                     android:layout_height="30dp"
                     android:layout_width="match_parent"
                     android:src="@drawable/ic_star_three"
                     android:translationY="-200dp"
                     android:layout_gravity="center" />

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>