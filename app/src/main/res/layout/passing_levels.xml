                                     android:layout_width="wrap_content"
                                     android:gravity="center_horizontal"
                                     android:shadowRadius="4"
                                     android:textSize="33sp"
                                     android:fontFamily="@font/paytone_one"
                                     android:textColor="@color/white"
                                     android:shadowColor="#000000"
                                     android:shadowDx="2"
                                     android:shadowDy="2"
                                     android:text="5" />

                            </LinearLayout>

                        </FrameLayout>

                        <ImageView
