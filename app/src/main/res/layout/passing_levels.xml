                             android:layout_width="88dp"
                             android:visibility="visible"
                             android:src="@drawable/transparent_box"
                             android:translationY="-120dp"
                             android:id="@+id/level_five_flash_box"
                             android:layout_gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_marginEnd="30dp"
                         android:gravity="center"
                         android:orientation="vertical">

                        <ImageView
                             android:layout_height="30dp"
                             android:layout_width="match_parent"
                             android:src="@drawable/ic_star_one"
                             android:padding="2dp"
                             android:translationY="60dp"
                             android:layout_gravity="center" />

                        <FrameLayout
                             android:layout_height="80dp"
                             android:layout_width="80dp"
                             android:contentDescription="Not_Available"
                             android:gravity="center"
                             android:id="@+id/level_six">

                            <LinearLayout
                                 android:layout_height="match_parent"
                                 android:layout_width="match_parent"
                                 android:gravity="center"
                                 android:background="@drawable/btn_short_condition_off"
                                 android:orientation="vertical">

                                <TextView
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:gravity="center_horizontal"
                                     android:shadowRadius="4"
                                     android:textSize="33sp"
                                     android:fontFamily="@font/paytone_one"
                                     android:textColor="@color/white"
                                     android:shadowColor="#000000"
                                     android:shadowDx="2"
                                     android:shadowDy="2"
                                     android:text="6" />

                            </LinearLayout>

                        </FrameLayout>

                        <ImageView
                             android:layout_height="30dp"
                             android:layout_width="match_parent"
                             android:src="@drawable/ic_star_none"
                             android:translationY="-90dp"
                             android:id="@+id/level_six_stars"
                             android:layout_gravity="center" />

                        <ImageView
                             android:layout_height="90dp"
                             android:layout_width="88dp"
                             android:visibility="visible"
                             android:src="@drawable/transparent_box"
                             android:translationY="-120dp"
                             android:id="@+id/level_six_flash_box"
                             android:layout_gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:visibility="gone"
                 android:gravity="top"
                 android:orientation="horizontal"
                 android:id="@+id/part_two">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:gravity="center"
                     android:orientation="vertical"
                     android:layout_marginStart="13dp">

                    <ImageView
                         android:layout_height="30dp"
                         android:layout_width="match_parent"
                         android:src="@drawable/ic_star_one"
                         android:padding="2dp"
                         android:translationY="60dp"
                         android:layout_gravity="center" />

                    <FrameLayout
                         android:layout_height="80dp"
                         android:layout_width="80dp"
                         android:contentDescription="Not_Available"
                         android:gravity="center"
                         android:id="@+id/level_seven">

                        <LinearLayout
                             android:layout_height="match_parent"
                             android:layout_width="match_parent"
                             android:gravity="center"
                             android:background="@drawable/btn_short_condition_off"
                             android:orientation="vertical">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:gravity="center_horizontal"
                                 android:shadowRadius="4"
                                 android:textSize="33sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="@color/white"
                                 android:shadowColor="#000000"
                                 android:shadowDx="2"
                                 android:shadowDy="2"
                                 android:text="7" />

                        </LinearLayout>

                    </FrameLayout>

                    <ImageView
                         android:layout_height="30dp"
                         android:layout_width="match_parent"
                         android:src="@drawable/ic_star_none"
                         android:translationY="-90dp"
                         android:id="@+id/level_seven_stars"
                         android:layout_gravity="center" />

                    <ImageView
                         android:layout_height="90dp"
                         android:layout_width="88dp"
                         android:visibility="visible"
                         android:src="@drawable/transparent_box"
                         android:translationY="-120dp"
                         android:id="@+id/level_seven_flash_box"
                         android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_marginEnd="16dp"
                     android:gravity="center"
                     android:orientation="vertical"
                     android:layout_marginStart="16dp">

                    <ImageView
                         android:layout_height="30dp"
                         android:layout_width="match_parent"
                         android:src="@drawable/ic_star_one"
                         android:padding="2dp"
                         android:translationY="60dp"
                         android:layout_gravity="center" />

                    <FrameLayout
                         android:layout_height="80dp"
                         android:layout_width="80dp"
                         android:contentDescription="Not_Available"
                         android:gravity="center"
                         android:id="@+id/level_eight">

                        <LinearLayout
                             android:layout_height="match_parent"
                             android:layout_width="match_parent"
                             android:gravity="center"
                             android:background="@drawable/btn_short_condition_off"
                             android:orientation="vertical">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:gravity="center_horizontal"
                                 android:shadowRadius="4"
                                 android:textSize="33sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="@color/white"
                                 android:shadowColor="#000000"
                                 android:shadowDx="2"
                                 android:shadowDy="2"
                                 android:text="8" />

                        </LinearLayout>

                    </FrameLayout>

                    <ImageView
                         android:layout_height="30dp"
                         android:layout_width="match_parent"
                         android:src="@drawable/ic_star_none"
                         android:translationY="-90dp"
                         android:id="@+id/level_eight_stars"
                         android:layout_gravity="center" />

                    <ImageView
                         android:layout_height="90dp"
                         android:layout_width="88dp"
                         android:visibility="visible"
                         android:src="@drawable/transparent_box"
                         android:translationY="-120dp"
                         android:id="@+id/level_eight_flash_box"
                         android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:gravity="center"
                     android:orientation="vertical">

                    <ImageView
                         android:layout_height="30dp"
                         android:layout_width="match_parent"
                         android:src="@drawable/ic_star_one"
                         android:padding="2dp"
                         android:translationY="60dp"
                         android:layout_gravity="center" />

                    <FrameLayout
                         android:layout_height="80dp"
                         android:layout_width="80dp"
                         android:contentDescription="Not_Available"
                         android:gravity="center"
                         android:id="@+id/level_nine">

                        <LinearLayout
                             android:layout_height="match_parent"
                             android:layout_width="match_parent"
                             android:gravity="center"
                             android:background="@drawable/btn_short_condition_off"
                             android:orientation="vertical">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:gravity="center_horizontal"
                                 android:shadowRadius="4"
                                 android:textSize="33sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="@color/white"
                                 android:shadowColor="#000000"
                                 android:shadowDx="2"
