                                 android:layout_width="88dp"
                                 android:visibility="visible"
                                 android:src="@drawable/transparent_box"
                                 android:translationY="-120dp"
                                 android:id="@+id/level_three_flash_box"
                                 android:layout_gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
