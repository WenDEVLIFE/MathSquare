<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#D9FFDB58">

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:textSize="38sp"
         android:textColor="#FFFFFF"
         android:layout_marginTop="228dp"
         app:layout_constraintTop_toTopOf="parent"
         android:shadowRadius="2"
         app:layout_constraintStart_toStartOf="parent"
         android:fontFamily="@font/paytone_one"
         android:textAllCaps="true"
         android:shadowColor="#000000"
         app:layout_constraintEnd_toEndOf="parent"
         android:shadowDx="4"
         android:shadowDy="3"
         android:id="@+id/textview_difficulty"
         android:text="Select Difficulty" />

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:visibility="visible"
         android:gravity="center_horizontal"
         android:orientation="vertical"
         tools:layout_editor_absoluteX="0dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintVertical_bias="0.233"
         app:layout_constraintTop_toBottomOf="@+id/textview_difficulty"
         android:id="@+id/difficulty_one">

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="60dp"
             android:layout_width="200sp"
             android:textSize="23sp"
             android:textColor="#FFFFFF"
             android:layout_marginBottom="20dp"
             android:background="@drawable/btn_long_condition_green"
             android:textAlignment="gravity"
             android:fontFamily="@font/paytone_one"
             android:paddingBottom="10dp"
             app:cornerRadius="2sp"
             android:id="@+id/btn_easy"
             android:paddingTop="10dp"
             android:text="Grade 1" />

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="60dp"
             android:layout_width="200sp"
             android:textSize="23sp"
             android:textColor="#FFFFFF"
             android:layout_marginBottom="20dp"
             android:background="@drawable/btn_long_condition_green"
             android:textAlignment="gravity"
             android:fontFamily="@font/paytone_one"
             android:paddingBottom="10dp"
             app:cornerRadius="2sp"
             android:id="@+id/btn_easy_two"
             android:paddingTop="10dp"
             android:text="Grade 2" />

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="60dp"
             android:layout_width="200sp"
             android:textSize="23sp"
             android:textColor="#FFFFFF"
             android:layout_marginBottom="20dp"
             android:background="@drawable/btn_long_condition_green"
             android:textAlignment="gravity"
             android:fontFamily="@font/paytone_one"
             android:paddingBottom="10dp"
             app:cornerRadius="2sp"
             android:id="@+id/btn_easy_three"
             android:paddingTop="10dp"
             android:text="Grade 3" />

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="60dp"
             android:layout_width="200sp"
             android:background="@drawable/btn_long_condition"
             android:textAlignment="gravity"
             android:fontFamily="@font/paytone_one"
             android:paddingBottom="10dp"
             android:textSize="23sp"
             app:cornerRadius="2sp"
             android:textColor="#FFFFFF"
             android:id="@+id/btn_next"
             android:paddingTop="10dp"
             android:text="Next" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:visibility="gone"
         android:gravity="center_horizontal"
         android:orientation="vertical"
         tools:layout_editor_absoluteX="0dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintVertical_bias="0.263"
         app:layout_constraintTop_toBottomOf="@+id/textview_difficulty"
         android:id="@+id/difficulty_two">

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="60dp"
             android:layout_width="200sp"
             android:textSize="23sp"
             android:textColor="#FFFFFF"
             android:layout_marginBottom="20dp"
             android:background="@drawable/btn_long_condition_green"
             android:textAlignment="gravity"
             android:fontFamily="@font/paytone_one"
             android:paddingBottom="10dp"
             app:cornerRadius="2sp"
             android:id="@+id/btn_medium"
             android:paddingTop="10dp"
             android:text="Grade 4" />

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="60dp"
             android:layout_width="200sp"
             android:textSize="23sp"
             android:textColor="#FFFFFF"
             android:layout_marginBottom="20dp"
             android:background="@drawable/btn_long_condition_green"
             android:textAlignment="gravity"
             android:fontFamily="@font/paytone_one"
             android:paddingBottom="10dp"
             app:cornerRadius="2sp"
             android:id="@+id/btn_hard"
             android:paddingTop="10dp"
             android:text="Grade 5" />

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="60dp"
             android:layout_width="200sp"
             android:textSize="23sp"
             android:textColor="#FFFFFF"
             android:layout_marginBottom="20dp"
             android:background="@drawable/btn_long_condition_green"
             android:textAlignment="gravity"
             android:fontFamily="@font/paytone_one"
             android:paddingBottom="10dp"
             app:cornerRadius="2sp"
             android:id="@+id/btn_superhard"
             android:paddingTop="10dp"
             android:text="Grade 6" />

        <androidx.appcompat.widget.AppCompatButton
             android:layout_height="60dp"
             android:layout_width="200sp"
             android:background="@drawable/btn_long_condition"
             android:textAlignment="gravity"
             android:fontFamily="@font/paytone_one"
             android:paddingBottom="10dp"
             android:textSize="23sp"
             app:cornerRadius="2sp"
             android:textColor="#FFFFFF"
             android:id="@+id/btn_back"
             android:paddingTop="10dp"
             android:text="Back" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>