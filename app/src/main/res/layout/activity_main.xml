<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:fillViewport="true">

    <FrameLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:background="@color/yellowbg"
         android:id="@+id/main">

        <FrameLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:id="@+id/number_container">

        </FrameLayout>

        <ImageView
             android:layout_height="290dp"
             android:layout_width="match_parent"
             android:layout_marginBottom="100dp"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="70dp"
             android:layout_alignParentTop="true"
             app:srcCompat="@drawable/math_ops"
             android:id="@+id/appImage" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
            android:textAlignment="center"
             android:layout_centerHorizontal="true"
             android:textSize="45sp"
             android:textColor="#FFFFFF"
             android:layout_marginTop="160dp"
             android:shadowRadius="2"
             android:fontFamily="@font/shantell_sans_bold"
             android:shadowColor="#000000"
             android:shadowDx="4"
             android:shadowDy="3"
             android:id="@+id/text_title"
             android:text="@string/app_name" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_marginTop="400dp">

            <androidx.appcompat.widget.AppCompatButton
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="26dp"
                 android:background="@drawable/btn_playgame"
                 android:layout_marginHorizontal="75dp"
                 android:fontFamily="@font/paytone_one"
                 android:textSize="27sp"
                 android:textAllCaps="true"
                 android:drawableStart="@drawable/ic_playbtn"
                 android:textColor="@color/white"
                 android:id="@+id/btn_playgame"
                 android:text="@string/play_game" />

            <androidx.appcompat.widget.AppCompatButton
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="26dp"
                 android:background="@drawable/btn_tutorials"
                 android:layout_marginHorizontal="75dp"
                 android:fontFamily="@font/paytone_one"
                 android:textSize="27sp"
                 android:textAllCaps="true"
                 android:drawableStart="@drawable/ic_tutorialbtn"
                 android:textColor="@color/white"
                 android:id="@+id/btn_tutorials"
                 android:text="@string/tutorials" />

            <LinearLayout
                 android:layout_height="60dp"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="26dp"
                 android:background="@drawable/btn_default"
                 android:gravity="left|center"
                 android:elevation="3dp"
                 android:layout_marginHorizontal="75dp"
                 android:orientation="horizontal"
                 android:id="@+id/btn_play_quiz">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="62dp"
                     android:background="@drawable/btn_ic_background"
                     android:gravity="center"
                     android:orientation="horizontal">

                    <ImageView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:padding="12dp"
                         app:srcCompat="@drawable/ic_quiz" />

                </LinearLayout>

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:fontFamily="@font/paytone_one"
                     android:textSize="27sp"
                     android:textAllCaps="true"
                     android:textColor="@color/white"
                     android:layout_marginLeft="8dp"
                     android:text="Quiz" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="60dp"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="26dp"
                 android:background="@drawable/btn_logout"
                 android:gravity="left|center"
                 android:elevation="3dp"
                 android:layout_marginHorizontal="75dp"
                 android:orientation="horizontal"
                 android:id="@+id/btn_logout">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="62dp"
                     android:background="@drawable/btn_ic_logout"
                     android:gravity="center"
                     android:orientation="horizontal">

                    <ImageView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:padding="12dp"
                         app:srcCompat="@drawable/ic_logout" />

                </LinearLayout>

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:fontFamily="@font/paytone_one"
                     android:textSize="27sp"
                     android:textAllCaps="true"
                     android:textColor="@color/white"
                     android:layout_marginLeft="8dp"
                     android:text="Log Out" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="26dp"
                 android:background="@drawable/btn_exitgame"
                 android:layout_marginHorizontal="75dp"
                 android:fontFamily="@font/paytone_one"
                 android:textSize="27sp"
                 android:textAllCaps="true"
                 android:drawableStart="@drawable/ic_exitgame"
                 android:textColor="@color/white"
                 android:id="@+id/btn_exitgame"
                 android:text="@string/exit_game" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>