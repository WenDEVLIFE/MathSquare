<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:fillViewport="true"
     android:id="@+id/scroll">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="top"
         android:orientation="vertical"
         android:id="@+id/main">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="start|center"
             android:orientation="vertical"
             android:layout_marginTop="60dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:textSize="25sp"
                 android:textColor="@color/white"
                 android:layout_marginTop="30dp"
                 android:gravity="center_horizontal"
                 android:layout_marginHorizontal="28dp"
                 android:shadowRadius="4"
                 android:fontFamily="@font/paytone_one"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="Teacher Dashboard" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="120dp"
             android:layout_width="match_parent"
             android:gravity="center"
             android:orientation="horizontal"
             android:layout_marginTop="30dp">

            <ImageView
                 android:layout_height="60dp"
                 android:layout_width="60dp"
                 android:src="@drawable/ic_add"
                 android:background="@drawable/btn_condition_create"
                 android:elevation="16dp"
                 android:padding="4dp"
                 android:id="@+id/createsection" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="200dp"
             android:layout_width="match_parent"
             android:layout_marginEnd="10dp"
             android:gravity="center"
             android:background="@drawable/bg_board_two"
             android:padding="8dp"
             android:orientation="horizontal"
             android:layout_marginTop="30dp"
             android:layout_marginStart="10dp">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:gravity="center|top"
                 android:background="@drawable/bg_board_three"
                 android:padding="12dp"
                 android:orientation="vertical">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="top|center"
                     android:orientation="horizontal">

                    <TableLayout
                         xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:stretchColumns="0,1">

                        <TableRow
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="0dp"
                                 android:gravity="center"
                                 android:textSize="23sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="#204520"
                                 android:layout_weight="1"
                                 android:layout_gravity="start"
                                 android:text="Grade"
                                 android:textStyle="bold" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="0dp"
                                 android:gravity="center"
                                 android:textSize="23sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="#204520"
                                 android:layout_weight="1"
                                 android:layout_gravity="end"
                                 android:text="Section"
                                 android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:paddingTop="8dp">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="0dp"
                                 android:gravity="center"
                                 android:textSize="18sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="#5DB575"
                                 android:layout_weight="1"
                                 android:layout_gravity="start"
                                 android:text="1" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:fontFamily="@font/paytone_one"
                                android:gravity="center"
                                android:text="Nara"
                                android:textColor="#5DB575"
                                android:textSize="18sp" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
             android:layout_height="60dp"
             android:layout_width="220dp"
             android:background="@drawable/box_create"
             android:elevation="8dp"
             android:translationY="-40dp"
             android:layout_marginStart="20dp"
             android:id="@+id/sections_panel">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:gravity="start|center"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="center_horizontal"
                     android:shadowRadius="4"
                     android:textSize="20sp"
                     android:fontFamily="@font/paytone_one"
                     android:textColor="@color/white"
                     android:shadowColor="#000000"
                     android:shadowDx="2"
                     android:shadowDy="2"
                     android:text="Dashboard    >" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="start|center"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_horizontal"
                 android:shadowRadius="4"
                 android:textSize="25sp"
                 android:fontFamily="@font/paytone_one"
                 android:textColor="@color/white"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="Quizzes"
                 android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="200dp"
             android:layout_width="match_parent"
             android:layout_marginEnd="10dp"
             android:gravity="center"
             android:background="@drawable/bg_board_two"
             android:padding="8dp"
             android:orientation="horizontal"
             android:layout_marginTop="30dp"
             android:layout_marginStart="10dp">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:gravity="top|center"
                 android:background="@drawable/bg_board_three"
                 android:padding="12dp"
                 android:orientation="vertical">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="top|center"
                     android:orientation="horizontal">

                    <LinearLayout
                         android:layout_height="50dp"
                         android:layout_width="220dp"
                         android:gravity="start|center"
                         android:background="@drawable/box_create"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="match_parent"
                             android:layout_width="80dp"
                             android:gravity="center"
                             android:textSize="16sp"
                             android:fontFamily="@font/paytone_one"
                             android:textColor="@color/white"
                             android:text="Quiz 1" />

                        <TextView
                             android:layout_height="match_parent"
                             android:layout_width="20dp"
                             android:gravity="center"
                             android:textSize="16sp"
                             android:fontFamily="@font/paytone_one"
                             android:textColor="@color/white"
                             android:text="-" />

                        <TextView
                             android:layout_height="match_parent"
                             android:layout_width="match_parent"
                             android:gravity="center"
                             android:textSize="16sp"
                             android:fontFamily="@font/paytone_one"
                             android:textColor="@color/white"
                             android:id="@+id/operation_type"
                             android:text="Addition" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                         android:layout_height="match_parent"
                         android:layout_width="match_parent"
                         android:thumb="@drawable/switch_thumb"
                         app:track="@drawable/switch_track"
                         app:showText="false"
                         android:id="@+id/switch_quiz1" />

                </LinearLayout>

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="top|center"
                     android:orientation="horizontal"
                     android:layout_marginTop="8dp">

                    <LinearLayout
                         android:layout_height="50dp"
                         android:layout_width="220dp"
                         android:gravity="start|center"
                         android:background="@drawable/box_create"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="match_parent"
                             android:layout_width="80dp"
                             android:gravity="center"
                             android:textSize="16sp"
                             android:fontFamily="@font/paytone_one"
                             android:textColor="@color/white"
                             android:text="Quiz 2" />

                        <TextView
                             android:layout_height="match_parent"
                             android:layout_width="20dp"
                             android:gravity="center"
                             android:textSize="16sp"
                             android:fontFamily="@font/paytone_one"
                             android:textColor="@color/white"
                             android:text="-" />

                        <TextView
                             android:layout_height="match_parent"
                             android:layout_width="match_parent"
                             android:gravity="center"
                             android:textSize="16sp"
                             android:fontFamily="@font/paytone_one"
                             android:textColor="@color/white"
                             android:id="@+id/operation_type_2"
                             android:text="Multiplication" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                         android:layout_height="match_parent"
                         android:layout_width="match_parent"
                         android:thumb="@drawable/switch_thumb"
                         app:track="@drawable/switch_track"
                         app:showText="false"
                         android:id="@+id/switch_quiz2" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
             android:layout_height="60dp"
             android:layout_width="220dp"
             android:background="@drawable/box_create"
             android:elevation="8dp"
             android:translationY="-40dp"
             android:layout_marginStart="20dp"
             android:id="@+id/quizhistory_panel">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:gravity="start|center"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="center_horizontal"
                     android:shadowRadius="4"
                     android:textSize="20sp"
                     android:fontFamily="@font/paytone_one"
                     android:textColor="@color/white"
                     android:shadowColor="#000000"
                     android:shadowDx="2"
                     android:shadowDy="2"
                     android:text="Dashboard    >" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
             android:layout_height="160dp"
             android:layout_width="match_parent"
             android:gravity="top|center"
             android:orientation="vertical"
             android:layout_marginTop="36dp">

            <LinearLayout
                 android:layout_height="60dp"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="26dp"
                 android:background="@drawable/btn_logout"
                 android:gravity="left|center"
                 android:elevation="3dp"
                 android:layout_marginHorizontal="75dp"
                 android:orientation="horizontal"
                 android:id="@+id/btn_logout">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="62dp"
                     android:background="@drawable/btn_ic_logout"
                     android:gravity="center"
                     android:orientation="horizontal">

                    <ImageView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:padding="12dp"
                         app:srcCompat="@drawable/ic_logout" />

                </LinearLayout>

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:fontFamily="@font/paytone_one"
                     android:textSize="27sp"
                     android:textAllCaps="true"
                     android:textColor="@color/white"
                     android:layout_marginLeft="8dp"
                     android:text="Log Out" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>