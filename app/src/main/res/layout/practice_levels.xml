<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:id="@+id/main">

    <FrameLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:id="@+id/number_container">

    </FrameLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="top|center"
         android:orientation="vertical">

        <LinearLayout
             android:layout_height="70dp"
             android:layout_width="match_parent"
             android:gravity="center"
             android:background="@drawable/btn_long_condition_off"
             android:orientation="horizontal"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:layout_marginTop="30dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="4dp"
                 android:gravity="center_horizontal"
                 android:shadowRadius="4"
                 android:textSize="20sp"
                 android:fontFamily="@font/paytone_one"
                 android:textColor="@color/white"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="Practice" />

            <ImageView
                 android:layout_height="20dp"
                 android:layout_width="20dp"
                 android:src="@drawable/btn_operation_add"
                 android:id="@+id/difficultyImage"
                 android:layout_gravity="center" />

        </LinearLayout>

        <GridLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginBottom="30dp"
             android:useDefaultMargins="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="10dp"
             android:columnCount="2"
             android:rowCount="2">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="top"
                 android:orientation="vertical">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="center"
                     android:layout_marginTop="30dp">

                    <androidx.appcompat.widget.AppCompatButton
                         android:layout_height="60dp"
                         android:layout_width="200sp"
                         android:background="@drawable/btn_long_condition"
                         android:textAlignment="gravity"
                         android:fontFamily="@font/paytone_one"
                         android:paddingBottom="10dp"
                         android:textSize="23sp"
                         app:cornerRadius="2sp"
                         android:textColor="#FFFFFF"
                         android:id="@+id/btn_enter"
                         android:paddingTop="10dp"
                         android:text="Start" />

                    <androidx.appcompat.widget.AppCompatButton
                         android:layout_height="60dp"
                         android:layout_width="200sp"
                         android:visibility="gone"
                         android:textSize="23sp"
                         android:textColor="#FFFFFF"
                         android:background="@drawable/btn_long_condition"
                         android:textAlignment="gravity"
                         android:fontFamily="@font/paytone_one"
                         android:paddingBottom="10dp"
                         app:cornerRadius="2sp"
                         android:id="@+id/btn_next"
                         android:paddingTop="10dp"
                         android:text="Next" />

                    <androidx.appcompat.widget.AppCompatButton
                         android:layout_height="60dp"
                         android:layout_width="200sp"
                         android:visibility="gone"
                         android:textSize="23sp"
                         android:textColor="#FFFFFF"
                         android:background="@drawable/btn_long_condition"
                         android:textAlignment="gravity"
                         android:fontFamily="@font/paytone_one"
                         android:paddingBottom="10dp"
                         app:cornerRadius="2sp"
                         android:id="@+id/btn_back"
                         android:paddingTop="10dp"
                         android:text="Back" />

                </LinearLayout>

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="center"
                     android:orientation="vertical"
                     android:layout_marginTop="10dp">

                    <FrameLayout
                         android:layout_height="70dp"
                         android:layout_width="140dp"
                         android:gravity="center"
                         android:id="@+id/heart_choice">

                        <LinearLayout
                             android:layout_height="match_parent"
                             android:layout_width="match_parent"
                             android:gravity="center|start"
                             android:background="@drawable/button_green_choices"
                             android:orientation="vertical">

                            <LinearLayout
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:gravity="center|start"
                                 android:orientation="horizontal"
                                 android:layout_marginStart="20dp">

                                <ImageView
                                     android:layout_height="40dp"
                                     android:layout_width="40dp"
                                     android:src="@drawable/ic_heart"
                                     android:scaleType="centerCrop"
                                     android:padding="2dp"
                                     android:id="@+id/icon_heart"
                                     android:layout_gravity="center" />

                                <TextView
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:textSize="33sp"
                                     android:textColor="@color/white"
                                     android:layout_marginStart="16dp"
                                     android:layout_marginBottom="4dp"
                                     android:gravity="center_horizontal"
                                     android:shadowRadius="4"
                                     android:fontFamily="@font/paytone_one"
                                     android:shadowColor="#000000"
                                     android:shadowDx="2"
                                     android:shadowDy="2"
                                     android:id="@+id/heart_txt"
                                     android:text="3" />

                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                         android:layout_height="70dp"
                         android:layout_width="140dp"
                         android:gravity="center"
                         android:layout_marginTop="20dp"
                         android:id="@+id/timer_choice">

                        <LinearLayout
                             android:layout_height="match_parent"
                             android:layout_width="match_parent"
                             android:gravity="center|start"
                             android:background="@drawable/button_green_choices"
                             android:orientation="vertical">

                            <LinearLayout
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:gravity="center|start"
                                 android:orientation="horizontal"
                                 android:layout_marginStart="20dp">

                                <ImageView
                                     android:layout_height="40dp"
                                     android:layout_width="40dp"
                                     android:src="@drawable/ic_clock"
                                     android:scaleType="centerCrop"
                                     android:padding="2dp"
                                     android:id="@+id/icon_timer"
                                     android:layout_gravity="center" />

                                <TextView
                                     android:layout_height="wrap_content"
                                     android:layout_width="wrap_content"
                                     android:textSize="33sp"
                                     android:textColor="@color/white"
                                     android:layout_marginStart="16dp"
                                     android:layout_marginBottom="4dp"
                                     android:gravity="center_horizontal"
                                     android:shadowRadius="4"
                                     android:fontFamily="@font/paytone_one"
                                     android:shadowColor="#000000"
                                     android:shadowDx="2"
                                     android:shadowDy="2"
                                     android:id="@+id/timer_txt"
                                     android:text="5" />

                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</FrameLayout>