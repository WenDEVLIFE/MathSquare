<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked State -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Inner padding for the oval -->
            <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <solid android:color="#4CD470"/> <!-- Light green -->
                    <stroke android:width="1dp" android:color="#4CD470"/>
                    <size android:width="25dp" android:height="25dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Unchecked State -->
    <item android:state_checked="false">
        <layer-list>
            <!-- Inner padding for the oval -->
            <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <solid android:color="#FF738B"/> <!-- Light red -->
                    <stroke android:width="1dp" android:color="#8c8c8c"/>
                    <size android:width="25dp" android:height="25dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
